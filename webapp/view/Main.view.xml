                    <viz:feeds>
                        <viz.feeds:FeedItem uid="size" type="Measure"
                            values="quantity" />
                        <viz.feeds:FeedItem uid="color" type="Dimension"
                            values="description" />
                    </viz:feeds>
                </viz:VizFrame>
                </layout:flexContent>
                            </layout:FixFlex>
            </f:content>
            </f:Card>
            
            
            
            <f:Card class="sapUiMediumMargin" width="33%">
            <f:content>    
                <layout:FixFlex id='chartFixFlex4' minFlexSize="250">
                <layout:flexContent>
                    <viz:Popover id="idPopOver4"></viz:Popover>
                    <viz:VizFrame id="idVizFrame4" uiConfig="{applicationSet:'fiori'}"
